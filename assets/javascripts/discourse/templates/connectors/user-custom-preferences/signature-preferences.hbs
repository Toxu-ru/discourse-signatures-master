{{#if siteSettings.signatures_enabled}}
  <div class="control-group signatures">
 
    <div class="controls">
      <label class="control-label">Мои интересы</label>
      {{#if siteSettings.signatures_advanced_mode}}
        {{d-editor value=model.custom_fields.signature_raw showUploadModal="showUploadModal"}}
      {{else}}
        <label class='text-label'>
          {{input maxlength="75" class="input-xxlarge" type="text" value=model.custom_fields.signature_url}}
        </label>
      {{/if}}
    </div>
    <div class="instructions">Например: Спорт и походы (не более 75 символов)</div>
  </div>
{{/if}}
